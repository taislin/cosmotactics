{
    "applicationId": "js.neutralino.cosmotactics",
    "defaultMode": "window",
    "url": "/app/",
    "port": 0,
    "enableServer": true,
    "logging": {
        "enabled": true,
        "writeToLogFile": true
    },
    "nativeAllowList": [
        "app.*"
    ],
    "modes": {
        "window": {
            "title": "CosmoTactics",
            "width": 1230,
            "height": 860,
            "minWidth": 1024,
            "minHeight": 768,
            "fullScreen": false,
            "alwaysOnTop": false,
            "icon": "./app/icons/icon.png",
            "enableInspector": false,
            "borderless": false,
            "maximize": false
        }
    },
    "cli": {
        "binaryName": "cosmotactics",
        "resourcesPath": "./app/",
        "extensionsPath": "/extensions/",
        "clientLibrary": "./app/assets/neutralino.js",
        "binaryVersion": "6.2.0",
        "clientVersion": "6.2.0",
        "bundle": {
            "icon": {
                "mac": "./app/icons/icon.icns",
                "windows": "./app/icons/icon.ico",
                "linux": "./app/icons/icon.png"
            }
        }
    },
    "buildScript": {
        "mac": {
            "architecture": [
                "x64",
                "arm64",
                "universal"
            ],
            "minimumOS": "10.13.0",
            "appName": "cosmotactics",
            "appBundleName": "Cosmotactics",
            "appIdentifier": "com.cosmotactics.app",
            "appIcon": "app/icons/icon.icns"
        },
        "win": {
            "architecture": [
                "x64"
            ],
            "appName": "cosmotactics",
            "appIcon": "app/icons/icon.ico"
        },
        "linux": {
            "architecture": [
                "x64",
                "arm64",
                "armhf"
            ],
            "appName": "cosmotactics",
            "appIcon": "app/icons/icon.png",
            "appPath": "/usr/share/cosmotactics",
            "appIconPath": "/usr/share/cosmotactics/icon.png",
            "appIconLocation": "/usr/share/cosmotactics/icon.png"
        }
    }
}